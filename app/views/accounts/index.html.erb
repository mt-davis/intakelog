<div class="row">
<div class="col-md-8">
    <h1>Listing Client</h1>

<table class="table table-hover table-condensed">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Program</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   
       <% @account.each do |account| %>
      <tr>
        
        <td><%= account.first_name %></td>
        <td><%= account.last_name %></td>
        <td><%= account.address %></td>
        <td><%= account.phone %></td>
        <td>
<%if account.program%>
   <%=account.program.program%>
<%else%>
   Program doesn't exist
<%end%>
</td>
        <td><%= link_to ' Show', account, class: 'fa fa-eye', 'data-toggle': 'tooltip', 'data-placement':'top', title: 'Show Client Account' %></td>
        <td><%= link_to ' Edit', edit_account_path(account), class: "fa fa-pencil-square-o", 'data-toggle': 'tooltip', 'data-placement':'top', title: 'Edit Client Account'  %></td>
        <% if user_signed_in? && current_user.admin? %>
        <td><%= link_to ' Delete', account, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash", 'data-toggle': 'tooltip', 'data-placement':'top', title: 'Delete Client Account' %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @account %>
<br>
<%= link_to 'Add Client', new_account_path, class: "btn btn-primary" %>
</div>

<div class="col-md-4">
    <div align="center">
    <h1>App Info</h1>
    <b>Current Client Count</b>
    <%= @account.count %>
  </div>
</div>
</div>